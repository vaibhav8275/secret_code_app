<h1>Generate Secret Codes</h1>
<%= simple_form_for(:secret_code,method: :post, url: create_multiple_secret_code_path) do |f| %>
  <%= f.input :no, :collection => [1, 10, 20, 50, 100], selected: '1' %>
  <%= f.submit 'Generate Secret Codes' %>
<% end %>

<hr/> 

<h1>Secret Codes</h1>
<table class="table">
  <thead>
    <tr>
      <th>Secret code</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @secret_codes.each do |secret_code| %>
      <tr>
        <td><%= secret_code.secret_code %></td>
        <td><%= secret_code.user.try(:email) %></td>
        <td><%= link_to 'Show', secret_code %></td>
        <td><%= link_to 'Edit', edit_secret_code_path(secret_code) %></td>
        <td><%= link_to 'Destroy', secret_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
<%= will_paginate @secret_codes, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
<br/>

<%= link_to 'New Secret Code', new_secret_code_path %>
